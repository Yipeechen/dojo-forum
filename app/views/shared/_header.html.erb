<link href="https://fonts.googleapis.com/css?family=Sigmar+One" rel="stylesheet">
<nav class="navbar navbar-inverse" style="margin-bottom: 0px;">
  <div class="container-fluid">
     <div class="navbar-header">
       <%= link_to  root_path, class: "navbar-brand" do %>
        <p style="font-family: 'Sigmar One', cursive; font-size: 20px;">Dojo</p> 
       <% end %>
     </div>
     <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
          <li><%= link_to ' Feeds <i class="glyphicon glyphicon-fire" aria-hidden="true"></i>'.html_safe, feeds_posts_path %></li>
          <li><%= link_to ' All Post <i class="glyphicon glyphicon-list" aria-hidden="true"></i>'.html_safe, posts_path %></li>
          <li><%= link_to ' New Post <i class="glyphicon glyphicon-file" aria-hidden="true"></i>'.html_safe, new_post_path %></li>
      </ul>
       <ul class="pull-right text-right nav navbar-nav">
