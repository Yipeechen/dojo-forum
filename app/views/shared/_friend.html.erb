<% if user != current_user %>
  <% if current_user.friend?(user)%>
    <%= link_to '取消好友', friendship_path(user), method: :delete, class: "btn btn-default btn-sm" %>
  <% else %>
    <%= link_to '加入好友', friendships_path(friend_id: user), method: :post, class: "btn btn-warning btn-sm"%>
  <% end %>
<% end %>