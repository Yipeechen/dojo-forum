<table class="table table-hover">
  <thead>
    <tr>
      <th style="text-align: center;">Replies count <i class="glyphicon glyphicon-chevron-down" aria-hidden="true"></i></th>
      <th style="text-align: center;">Title</th>
      <th style="text-align: center;">Last replied at <i class="glyphicon glyphicon-chevron-down" aria-hidden="true"></i></th>
      <th style="text-align: center;">Viewed count <i class="glyphicon glyphicon-chevron-down" aria-hidden="true"></i></th>
    </tr>
  </thead>
  <tbody style="text-align: center;">
    <% @posts.each do |post| %>
    <tr>
      <td><span  class="label label-warning"><%= post.replies_count %></span></td>
      <td style="text-align: left;">
        <%= link_to post_path(post) do %>
          <%= post.title %>
        <% end %>
      </td>
      <td>
        <% if post.replies_count != 0 %>
          <%= post.replies.last.created_at.to_s[0..9] %>
        <% else %>
          No reply
        <% end %>
      </td>
      <td><i class="glyphicon glyphicon-eye-open" aria-hidden="true"></i> &nbsp;<%= post.viewed_count %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<div class="text-center">
  <%= paginate @posts %>
</div>