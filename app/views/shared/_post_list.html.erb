<table class="table table-hover">
  <thead>
    <tr>
      <th>Replies count <i class="glyphicon glyphicon-chevron-down" aria-hidden="true"></i></th>
      <th>Title</th>
      <th>Last replied at <i class="glyphicon glyphicon-chevron-down" aria-hidden="true"></i></th>
      <th>Viewed count <i class="glyphicon glyphicon-chevron-down" aria-hidden="true"></i></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
    <tr>
      <td><span  class="label label-warning"><%= post.replies_count %></span></td>
      <td>
        <%= link_to post_path(post) do %>
          <%= post.title %>
        <% end %>
      </td>
      <td><%= post.replies.last.created_at.to_s[0..9] %></td>
      <td></td>
    </tr>
    <% end %>
  </tbody>
</table>

<div class="text-center">
  <%= paginate @posts %>
</div>