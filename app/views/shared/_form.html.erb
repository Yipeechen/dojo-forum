  <%= form_for  @post do |f| %>
    <%= f.label :title, "Title" %>
    <%= f.text_field :title, class:"form-control" %> <br>

    <%= f.label :description, "Description" %>
    <%= f.text_area :description, class:"form-control" %> <br>

    <%= f.label :image, "Photo" %>
    <%= image_tag @post.image, width: '300px' if @post.image? %>
    <%= f.file_field :image %> <br>

    <%= f.label :category_ids, "Categoryï¼š" %>
    <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name, checked: @post.categories.map(&:id)) do |category| %>    
      <%= category.check_box %> <%= category.label %>
    <% end %> <br>

    <%= f.submit  'Submit', :class => 'btn btn-primary' %>
  <% end %>