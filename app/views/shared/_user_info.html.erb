<div class="page-header">
  <div class="col-md-3 col-sm-4">
    <div class="text-center">
      <%= image_tag @user.avatar, class: "img-responsive img-rounded" if @user.avatar?%>
      <%= image_tag "http://via.placeholder.com/400x400", class: "img-responsive img-rounded"  unless @user.avatar?%> 
      <h3><%= @user.name if @user.name? %>
      <%= @user.email.split("@").first unless @user.name? %>
      </h3>
    </div>
  </div>
  <div class="col-md-9 col-sm-8">
    <p><strong><%= @user.email %></strong></p>
    <div><%= simple_format @user.introduction %></div>
    <% if @user.email == current_user.email %>
      <%= link_to '編輯個人資料', edit_user_path(@user), class: "btn btn-primary" %>
    <% end %>
  </div>
  <div class="clearfix"></div>
</div>