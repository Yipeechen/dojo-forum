<div class="container">
  <h1>論壇前台</h1>
  <div class="row">
    <div class="col-md-12">
      <div>
        <%= link_to 'New post', new_post_path, class: "btn btn-primary" %>
      </div>
      <br>

      <ul class="nav nav-pills main-tab">
        <li  role="presentation"><%= link_to "全部文章", root_path %></li>
        <% @categories.each do |category| %>
        <li role="presentation" class="<%= "active" if category == @category %>">
          <%= link_to category.name, category_path(category) %>
        </li>
      <% end %>
      </ul>
      <br>
        <%= render partial: "shared/post_list" %>
    </div>

  </div>
</div>