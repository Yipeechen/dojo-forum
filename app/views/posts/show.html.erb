<div class="container">
  <h1><%= @post.title %></h1>
  <p>Category： <%= @post.categories.map(&:name).join(' | ') %></p>
  <%= image_tag @post.image, width: '600px' %>
  <p><%= @post.description %></p>
  
  
  <%= link_to '<i class="glyphicon glyphicon-pencil" aria-hidden="true"> 編輯</i>'.html_safe, edit_post_path, class: 'btn btn-primary' %>
  <%= link_to '<i class="glyphicon glyphicon-trash" aria-hidden="true"> 刪除</i>'.html_safe, post_path(@post), class: 'btn btn-danger', method: :delete, data: {confirm:"Are you sure?"} %>
  <hr>
  <% @post.replies.each do |reply| %>
    <div>
      <h4><%= reply.user.name if reply.user.name? %>
          <%= reply.user.email.split("@").first unless reply.user.name? %> 
      </h4>
      <p><%= simple_format reply.content %></p>
      <p class="text-muted">
        <em><%= time_ago_in_words(reply.created_at) %> </em>
        <% if current_user.admin? || reply.user == current_user %>
          <%= link_to '<i class="glyphicon glyphicon-trash" aria-hidden="true"> 刪除</i>'.html_safe, post_reply_path(@post, reply), method: :delete, data: {confirm:"確定刪除此留言?"}, class: "pull-right btn btn-default btn-sm" %>
        <% end %>
      </p>
    </div>
    <hr>
    <% end %>

   <%= form_for [@post, @reply] do |f| %>
    <div class="form-group">
      <%= f.text_area :content, placeholder: "add comment", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.submit  'Submit', :class => 'btn btn-primary' %>
    </div>
  <% end %>

</div>
