<!DOCTYPE html>
<html>
  <head>
    <title>DojoForum</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render :partial => "shared/header" %>
    <link href="https://fonts.googleapis.com/css?family=Nanum+Pen+Script|Sigmar+One" rel="stylesheet">
    <div class="site-name"><p>Dojo <span> - done your post with joy</span> </p></div>
    
    <% if flash[:notice] %>
    <br>
    <div class="container">
      <div class="row">
        <div class="alert alert-success alert-dismisssible" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span></button>
          <%= notice %>
        </div>
      </div>
    </div>
    <% end %>

    <% if flash[:alert] %>
    <br>
    <div class="container">
      <div class="row">
        <div class="alert alert-danger alert-dismisssible" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
          </button>
          <%= alert %>
        </div>
      </div>
    </div>
    <% end %>

     
 
    <%= yield %>
  </body>
</html>
